---
import Layout from '../../layouts/Layout.astro';
import ThemeToggle from '../../components/ThemeToggle.astro';
import LanguagePicker from '../../components/LanguagePicker.astro';
---

<Layout title="Eren Terakye — Portfolyo" lang="tr">
  <main class="mx-auto max-w-3xl px-6 py-20">

    <!-- ─── Header / Hero ─────────────────────────────────── -->
    <section class="pb-20 fade-in visible">
      <div class="flex justify-end gap-1 mb-12">
        <LanguagePicker lang="tr" />
        <ThemeToggle />
      </div>

      <h1 class="text-4xl sm:text-5xl font-black leading-tight text-slate-900 dark:text-slate-50 mb-6">
        Merhaba, ben Eren.
      </h1>

      <p class="text-lg text-slate-500 dark:text-slate-400 leading-relaxed mb-10 max-w-2xl">
        Eskişehir Osmangazi Üniversitesi'nde 3. sınıf Bilgisayar Mühendisliği öğrencisiyim
        <span class="text-slate-700 dark:text-slate-300 font-medium">(GPA: 3.10)</span>.
        Yapay zeka, veri bilimi ve Python ile kodlama üzerine
        odaklanıyor; temiz, sürdürülebilir kod mimarileri yazmayı önemsiyorum.
        Şu anda <span class="text-slate-700 dark:text-slate-300 font-medium">2026 yaz dönemi</span> için
        stajyer mühendis pozisyonları arıyorum.
      </p>

      <div class="flex flex-wrap gap-3">
        <a
          href="mailto:contact@erenterakye.com"
          class="inline-flex items-center gap-2 rounded-lg bg-indigo-600 px-5 py-2.5 text-sm font-semibold text-white hover:bg-indigo-700 transition-colors duration-200"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
            <polyline points="22,6 12,13 2,6" />
          </svg>
          İletişime Geç
        </a>

        <a
          href="https://github.com/erenterakye"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg border border-slate-300 dark:border-slate-700 px-5 py-2.5 text-sm font-semibold text-slate-700 dark:text-slate-300 hover:border-slate-400 dark:hover:border-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors duration-200"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z" />
          </svg>
          GitHub
        </a>

        <a
          href="https://linkedin.com/in/erenterakye"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg border border-slate-300 dark:border-slate-700 px-5 py-2.5 text-sm font-semibold text-slate-700 dark:text-slate-300 hover:border-slate-400 dark:hover:border-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors duration-200"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          LinkedIn
        </a>
      </div>
    </section>

    <!-- ─── Beceriler ─────────────────────────────────────── -->
    <section class="pb-20 fade-in">
      <h2 class="text-2xl font-black leading-tight text-slate-900 dark:text-slate-50 mb-6">
        Beceriler
      </h2>
      <div class="flex flex-wrap gap-2">
        {['Python', 'C++', 'Algoritmalar', 'Makine Öğrenimi', 'Yapay Zeka', 'Veri Bilimi'].map((skill) => (
          <span class="text-sm font-medium px-3 py-1.5 rounded-full border border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 bg-slate-100 dark:bg-slate-800">
            {skill}
          </span>
        ))}
      </div>
    </section>

    <!-- ─── Geçmiş & Eğitim ───────────────────────────────── -->
    <section class="pb-20 fade-in">
      <h2 class="text-2xl font-black leading-tight text-slate-900 dark:text-slate-50 mb-8">
        Geçmiş & Eğitim
      </h2>

      <ol class="relative border-l border-slate-200 dark:border-slate-800 ml-2 flex flex-col gap-8">

        <!-- Eğitim (en belirgin) -->
        <li class="pl-6 relative">
          <span class="absolute -left-[7px] top-1 w-3.5 h-3.5 rounded-full bg-indigo-600 dark:bg-indigo-400 ring-4 ring-slate-50 dark:ring-slate-900"></span>
          <p class="text-xs font-semibold uppercase tracking-wide text-indigo-600 dark:text-indigo-400 mb-1">
            Eğitim — 2023 – Devam Ediyor
          </p>
          <h3 class="font-bold text-slate-900 dark:text-slate-50">
            Eskişehir Osmangazi Üniversitesi
          </h3>
          <p class="text-sm text-slate-500 dark:text-slate-400 mt-0.5">
            Lisans Derecesi, Bilgisayar Mühendisliği
          </p>
          <p class="text-sm font-medium text-slate-700 dark:text-slate-300 mt-0.5">
            GPA: 3.10
          </p>
        </li>

        <!-- Sertifikalar -->
        <li class="pl-6 relative">
          <span class="absolute -left-[5px] top-1.5 w-2.5 h-2.5 rounded-full border-2 border-indigo-400 dark:border-indigo-500 bg-slate-50 dark:bg-slate-900 ring-4 ring-slate-50 dark:ring-slate-900"></span>
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-400 dark:text-slate-500 mb-1">
            Sertifika — Devam Ediyor
          </p>
          <h3 class="font-bold text-slate-900 dark:text-slate-50">
            Building AI Sertifikası
          </h3>
          <p class="text-sm text-slate-500 dark:text-slate-400 mt-0.5">
            University of Helsinki
          </p>
        </li>

        <li class="pl-6 relative">
          <span class="absolute -left-[5px] top-1.5 w-2.5 h-2.5 rounded-full bg-indigo-600 dark:bg-indigo-400 ring-4 ring-slate-50 dark:ring-slate-900"></span>
          <p class="text-xs font-semibold uppercase tracking-wide text-indigo-600 dark:text-indigo-400 mb-1">
            Sertifika — Ocak 2026
          </p>
          <h3 class="font-bold text-slate-900 dark:text-slate-50">
            Elements of AI Sertifikası
          </h3>
          <p class="text-sm text-slate-500 dark:text-slate-400 mt-0.5">
            University of Helsinki
          </p>
        </li>

        <li class="pl-6 relative">
          <span class="absolute -left-[5px] top-1.5 w-2.5 h-2.5 rounded-full bg-indigo-600 dark:bg-indigo-400 ring-4 ring-slate-50 dark:ring-slate-900"></span>
          <p class="text-xs font-semibold uppercase tracking-wide text-indigo-600 dark:text-indigo-400 mb-1">
            Sertifika — Aralık 2025
          </p>
          <h3 class="font-bold text-slate-900 dark:text-slate-50">
            Kaggle Python Sertifikası
          </h3>
          <p class="text-sm text-slate-500 dark:text-slate-400 mt-0.5">
            Kaggle
          </p>
        </li>

        <!-- Deneyim -->
        <li class="pl-6 relative">
          <span class="absolute -left-[5px] top-1.5 w-2.5 h-2.5 rounded-full bg-slate-400 dark:bg-slate-600 ring-4 ring-slate-50 dark:ring-slate-900"></span>
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-500 dark:text-slate-400 mb-1">
            Deneyim — Yaz 2025
          </p>
          <h3 class="font-bold text-slate-900 dark:text-slate-50">
            Work and Travel
          </h3>
          <p class="text-sm text-slate-500 dark:text-slate-400 mt-0.5">
            Valleyfair, Minnesota, ABD — Kültürel değişim ve uluslararası iş ortamına adaptasyon deneyimi.
          </p>
        </li>

      </ol>
    </section>

  </main>

  <!-- ─── Footer ──────────────────────────────────────────── -->
  <footer class="border-t border-slate-200 dark:border-slate-800 fade-in">
    <div class="mx-auto max-w-3xl px-6 py-8 flex flex-col sm:flex-row items-center justify-between gap-3">
      <p class="text-sm text-slate-400 dark:text-slate-500">
        &copy; {new Date().getFullYear()} Eren Terakye
      </p>
      <p class="text-sm text-slate-400 dark:text-slate-500">
        <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-indigo-600 dark:text-indigo-400 hover:underline">Astro</a>
        &amp;
        <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="text-indigo-600 dark:text-indigo-400 hover:underline">Tailwind CSS</a>
        ile oluşturuldu
      </p>
    </div>
  </footer>
</Layout>
